@model BarBerEMR.ViewModels.InvoicePackagesvm

@{
    ViewData["Title"] = "Edit";
    var Packages = (List<BarBerEMR.Models.Packages>)ViewBag.Packages;
}

<h1>Edit</h1>

<h4>Invoice</h4>
<hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                    <label asp-for="UserID" class="control-label"> User Name</label>

                </div>
                <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                    <select asp-for="UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                </div>
                <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                    <label asp-for="PaymentMethodId" class="control-label"> Payment Method</label>

                </div>
                <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                    <select asp-for="PaymentMethodId" class="form-control" asp-items="ViewBag.PaymentMethod"></select>
                </div>

                <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                    <label asp-for="InvoiceDate" class="control-label"></label>

                </div>
                <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                    <input asp-for="InvoiceDate" class="form-control" />
                    @*<span asp-validation-for="InvoiceDate" class="text-danger"></span>*@
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                    <div class="form-group" style="background-color:azure">
                        <label asp-for="Packages" class="control-label">Packages</label>
                        @foreach (var item in Packages)
                        {
                            <div>
                                <br><input type="checkbox" onclick="sum()" id="@item.ID" name="@item.ID">
                                <label for="@item.ID" id="@item.ID">Name, @item.PackageName ,Price :@item.PackagePrice</label>
                            </div>


                        }
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                    <label asp-for="Amount" class="control-label"></label>

                </div>
                <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                    <input asp-for="Amount" readonly class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                    <label asp-for="Vat" class="control-label">VAT</label>

                </div>
                <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                    <input asp-for="Vat" readonly class="form-control" />
                    <span asp-validation-for="Vat" class="text-danger"></span>
                </div>
                <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                    <label asp-for="AmountWithVat" class="control-label">Amount With VAT</label>

                </div>
                <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2">
                    <input asp-for="AmountWithVat" readonly class="form-control" />
                    <span asp-validation-for="AmountWithVat" class="text-danger"></span>
                </div>
            </div>

            <input asp-for="SkillID" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Create" onclick="updatemark()" class="btn btn-primary" />
            </div>
        </form>
 

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script src="~/js/CalcAmount.js"></script>
}
